
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="~/css/estillos.css">

   
</head>
<body>
    @{
        if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger">@ViewBag.Message</div>
        }
    }

    <section>
        <div class="general">
            <div class="user singinBox">

                <div class="formBx">
                    <form action="" method="post">
                        <style>
                            .h1 {
                                font-family: 'Lato', sans-serif;
                            }
                        </style>
                        <h1>DEMO STORE &copy;</h1>
                        <br />
                        <h3 class="H1style">Inicia Sesion</h3>
                        <br />
                        <input id="usuario" type="text" name="correo" value="" placeholder=" Usuario">
                        <input id="password" type="password" name="contraseña" placeholder=" Contraseña">
                        <input style="color : aliceblue " id="ingresar" type="submit" name="ingresar" value="Iniciar sesion">
                    </form>
                </div>

                <div class="imgBx"><img src="~/img/LoginPortada.png" alt="Login"></div>
            </div>

            
        </div>
    </section>
    <script>
        function toggleForm() {
            var container = document.querySelector('.general');
            container.classList.toggle("active");

    </script>

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {

            $('#ingresar').click(function (e) {
                var usuario = $('#usuario').val();
                var contraseña = $('#password').val();

                if (usuario == "Diego" && contraseña == "Correa") {
                    console.log("ir");
                      window.location.href = "@Url.Content("~/Producto/IndexProducto")";

                }
                else if (usuario == "" && contraseña == "") {
                    window.location.href = "Principal";
                }

                else {
                    alert("Usuarios y/o Contraseña incorrecto")

                }

                e.preventDefault();

            });






        });


    </script>
